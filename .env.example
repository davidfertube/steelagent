# Spec Agents - Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# Lead Collection (Supabase)
# ======================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ======================
# Embeddings (Voyage AI - 200M tokens FREE/month)
# Get from: https://www.voyageai.com
# ======================
VOYAGE_API_KEY=your-voyage-api-key

# ======================
# LLM Providers (at least one required)
# ======================
GROQ_API_KEY=your-groq-api-key

# Optional: Additional LLM providers for fallback
# CEREBRAS_API_KEY=your-cerebras-key
# TOGETHER_API_KEY=your-together-key
# OPENROUTER_API_KEY=your-openrouter-key

# Legacy (no longer used for embeddings)
# GOOGLE_API_KEY=your-google-api-key
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_INDEX_NAME=steel-index

# ======================
# Frontend
# ======================
# NEXT_PUBLIC_API_URL should be EMPTY for production (uses relative paths /api/chat)
# API routes run on same Next.js server, NOT a separate backend
# NEXT_PUBLIC_API_URL=

# ======================
# Future: Azure Stack (Corrosion-Grade Architecture)
# ======================
# AZURE_SUBSCRIPTION_ID=xxx
# AZURE_RESOURCE_GROUP=spec-agents-rg
# AZURE_DOC_INTELLIGENCE_ENDPOINT=https://xxx.cognitiveservices.azure.com
# AZURE_DOC_INTELLIGENCE_KEY=xxx
# AZURE_SEARCH_ENDPOINT=https://xxx.search.windows.net
# AZURE_SEARCH_KEY=xxx
# DATABASE_URL=postgresql://user:pass@xxx.postgres.database.azure.com/specdb

# ======================
# Authentication (Clerk) - Get from clerk.com
# ======================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# ======================
# Payments (Stripe) - Get from stripe.com
# ======================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Price IDs (create in Stripe Dashboard > Products)
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# ======================
# Rate Limiting (Upstash Redis) - Get from upstash.com
# Optional: Falls back to in-memory if not configured
# ======================
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# ======================
# Future: LLM (choose one)
# ======================
# ANTHROPIC_API_KEY=xxx
# AZURE_OPENAI_API_KEY=xxx
