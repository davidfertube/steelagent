{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/mcp-config.schema.json",
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "."],
      "description": "File system access for SteelAgent project"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for PRs and issues"
    }
  },
  "tools": {
    "allowed": [
      "read_file",
      "write_file",
      "list_directory",
      "search_files",
      "create_pull_request",
      "list_issues"
    ]
  }
}
